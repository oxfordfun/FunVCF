manifest {
    description = 'Fun VCF tools'
}

profiles {
    standard {
        process {
            errorStrategy = 'ignore'
            maxerrors = 1
        }

        env {
            SCRIPT = "/home/docker/Code/FunVCF/bin"
        }
    }

    docker {
        docker {
            enabled = true
        }
        env {
            SCRIPT = "/home/docker/Code/FunVCF/bin"
        }
    }

    singularity {
        singularity {
            enabled = true
        }

        process {
            errorStrategy = 'retry'
            maxerrors = 1
            container = '/data/images/funvcf-v0.1.0.img'
        }

        env {
            SCRIPT = "/home/docker/Code/FunVCF/bin"
        }
    }
}